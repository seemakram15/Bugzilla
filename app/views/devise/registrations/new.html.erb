<%unless notice %>
  <p class="alert"></p>
<%end%>
<h2>Sign up</h2>
<hr/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group row" >
    <%= f.label :name,:class=>'col-form-label col-md-2 ' %>
    <%= f.text_field :name, autofocus: true,  autocomplete: "name", :required=> true,:class=>"form-control col-md-5"%>
  </div>
  <% class_types = ["manager","developer","qa"] %>
  <div class="form-group row">
    <%= f.label :user_type ,'User Type:',:class=>'col-form-label col-md-2 '%>
    <%= f.select(:user_type, class_types,{},:class=>'form-control col-md-5') %>
  </div>

  <div class="form-group row">
    <%= f.label :email,:class=>'col-form-label col-md-2' %>
    <%= f.email_field :email, autocomplete: "email",:class=>'form-control col-md-5', :required=> true%>
  </div>

  <div class="form-group row">
    <%= f.label :password,:class=>'col-form-label col-md-2 ' %>
    <%= f.password_field :password, :required=> true, autocomplete: "new-password",:class=>'form-control col-md-5' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation,:class=>'col-form-label col-md-2 ' %>
    <%= f.password_field :password_confirmation, :required=> true, autocomplete: "new-password",:class=>'form-control col-md-5' %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up",:class=>'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>